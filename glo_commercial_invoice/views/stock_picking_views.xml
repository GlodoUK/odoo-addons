<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="stock_picking_form_view" model="ir.ui.view">
        <field name="name">stock.picking.form.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <!-- make invisible if move is out to customer -->
                <button
                    string="Print Commercial Invoice"
                    type="object"
                    name="action_commercial_invoice"
                    class="oe_highlight"
                    invisible="picking_type_code != 'outgoing'"
                />
            </xpath>

            <xpath expr="//field[@name='description_picking']" position="after">
                <field
                    name="intrastat_code_id"
                    column_invisible="parent.picking_type_code != 'outgoing'"
                />
                <field
                    name="intrastat_country_id"
                    column_invisible="parent.picking_type_code != 'outgoing'"
                />
                <field
                    name="weight"
                    column_invisible="parent.picking_type_code != 'outgoing'"
                />
                <field
                    name="price_unit"
                    column_invisible="parent.picking_type_code != 'outgoing'"
                />
            </xpath>
        </field>
    </record>
</odoo>
