<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <template
        id="report_invoice_document"
        inherit_id="account.report_invoice_document"
        priority="99"
    >
        <xpath expr="//p[@name='payment_communication']" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
        <xpath expr="//p[@name='payment_communication']" position="after">
            <t
                t-set="partner_bank"
                t-value="o.brand_id and o.brand_id.partner_id.bank_ids and o.brand_id.partner_id.bank_ids[0] or o.partner_bank_id"
            />
            <!-- <p name="payment_communication"> Payment Communication: <span class="fw-bold" t-field="o.payment_reference">INV/2023/00001</span></p> -->
            <div t-if="partner_bank and o.move_type in ['out_invoice', 'in_refund']">
                <p>Please make payment to: <br />
                </p>
                <div>
                    <strong>
                        Account Holder:
                    </strong>
                    <span
                        t-field="partner_bank.acc_holder_name"
                        t-if="partner_bank.acc_holder_name"
                    />
                    <span
                        t-field="partner_bank.partner_id"
                        t-if="not partner_bank.acc_holder_name"
                    />
                    <br />

                </div>
                <div>
                    <strong>Account #: </strong>
                    <span t-field="partner_bank.acc_number" />
                </div>
                <div>
                    <strong>Sort
                        Code: </strong>
                    <span t-field="partner_bank.bank_sort_code" />
                    <br />
                </div>
                <div>
                    <strong>
                        IBAN: </strong>
                    <span t-field="partner_bank.iban" />
                    <br />
                </div>
            </div>
        </xpath>

    </template>

</odoo>
