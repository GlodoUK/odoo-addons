<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <template
        id="sale_order_portal_content"
        inherit_id="sale.sale_order_portal_content"
    >
        <xpath expr="//div[@id='content']/section[last()]" position="inside">
            <t
                t-set="partner_bank"
                t-value="sale_order.brand_id and sale_order.brand_id.partner_id.bank_ids and sale_order.brand_id.partner_id.bank_ids[0]"
            />
            <t t-call="brands_account.brand_partner_payment_instructions" />
        </xpath>
    </template>
</odoo>
