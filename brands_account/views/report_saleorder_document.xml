<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <template
        id="report_sale_order_document"
        inherit_id="sale.report_saleorder_document"
    >
        <xpath expr="//p[@id='fiscal_position_remark']" position="before">
            <t
                t-set="partner_bank"
                t-value="doc.brand_id and doc.brand_id.partner_id.bank_ids and doc.brand_id.partner_id.bank_ids[0]"
            />
            <div t-if="partner_bank">
                <p>Please make payment to: <br />
                </p>
                <div>
                    <strong>
                        Account Holder:
                    </strong>
                    <span
                        t-field="partner_bank.acc_holder_name"
                        t-if="partner_bank.acc_holder_name"
                    />
                    <span
                        t-field="partner_bank.partner_id"
                        t-if="not partner_bank.acc_holder_name"
                    />
                    <br />

                </div>
                <div>
                    <strong>Account #: </strong>
                    <span t-field="partner_bank.acc_number" />
                </div>
                <div>
                    <strong>Sort
                        Code: </strong>
                    <span t-field="partner_bank.bank_sort_code" />
                    <br />
                </div>
                <div>
                    <strong>
                        IBAN: </strong>
                    <span t-field="partner_bank.iban" />
                    <br />
                </div>
            </div>
        </xpath>
    </template>
</odoo>
