<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <record id="product_template_only_form_view_inherited" model="ir.ui.view">
        <field name="name">product_template_only_form_view_inherited</field>
        <field name="model">product.template</field>
        <field name="priority">75</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='description_sale']/parent::group"
                position="after"
            >
                <group
                    string="Configurable Sale Description Template"
                    name="cpq_sale_description"
                    attrs="{'invisible': [('cpq_ok', '=', False)]}"
                >
                    <field name="cpq_description_sale_tmpl" nolabel="1" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
