<?xml version='1.0' encoding='utf-8' ?>
<templates xml:space="preserve">
    <t t-inherit="cpq.ProductTmplAttrib" owl="1" t-inherit-mode="extension">
        <xpath expr="//div[@t-foreach]/t/t[@t-elif][last()]" position="after">
            <t t-elif="ptav.cpq_custom_type === 'banding'">
                <select
                    class="form-control"
                    t-on-change="(ev) =&gt; props.onCustom(ptav.id, ev)"
                    t-att-value="props.selected[ptav.id]"
                >
                    <option />
                    <option
                        t-foreach="ptav.cpq_selection_values"
                        t-as="i"
                        t-key="i[0]"
                        t-att-value="i[0]"
                        t-esc="i[1]"
                        t-att-class="{ 'css_not_available': ptav.excluded }"
                    />
                </select>
            </t>
        </xpath>
    </t>
</templates>
