<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_edi_envelope_form" model="ir.ui.view">
        <field name="name">view_edi_envelope_form</field>
        <field name="model">edi.envelope</field>
        <field name="arch" type="xml">
            <form string="EDI envelope">
                <header>
                    <button
                        name="action_migrate_legacy_body_to_attachment"
                        type="object"
                        string="Migrate Legacy Body to Attachment"
                        invisible="not use_legacy_body"
                    />
                    <button name="run" type="object" string="Process" />
                    <field name="state" widget="statusbar" clickable="True" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button
                            name="action_view_messages"
                            type="object"
                            icon="fa-envelope-open-o"
                        >
                                <field
                                name="message_count"
                                widget="statinfo"
                                string="Messages"
                            />
                            </button>
                    </div>
                    <group>
                        <group>
                            <field name="use_legacy_body" invisible="1" />
                            <field name="backend_id" />
                            <field name="partner_id" />
                        </group>
                        <group>
                            <field name="route_id" />
                            <field name="direction" />
                            <field name="external_id" />
                            <field name="type" />
                        </group>
                        <group colspan="2" invisible="state != 'error'">
                            <field name="exc_name" />
                            <field name="exc_info" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Content">
                            <group invisible="use_legacy_body">
                                <field
                                    name="content_filename"
                                    groups="base.group_no_one"
                                />
                                <field name="content" filename="content_filename" />
                            </group>
                            <field name="legacy_body" invisible="not use_legacy_body" />
                        </page>
                        <page string="Other Info" name="other">
                            <group>
                                <field name="metadata_string" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="view_edi_envelope_tree" model="ir.ui.view">
        <field name="name">view_edi_envelope_tree</field>
        <field name="model">edi.envelope</field>
        <field name="arch" type="xml">
            <tree
                default_order="create_date desc"
                decoration-danger="state == 'error'"
                decoration-success="state == 'done'"
            >
                <field name="create_date" />
                <field name="external_id" />
                <field name="backend_id" />
                <field name="partner_id" />
                <field name="route_id" />
                <field name="direction" />
                <field name="state" />
                <field name="message_count" />
            </tree>
        </field>
    </record>
    <record id="view_edi_envelope_search" model="ir.ui.view">
        <field name="name">view_edi_envelope_search</field>
        <field name="model">edi.envelope</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id" />
                <field name="route_id" />
                <field name="external_id" />
                <filter
                    name="pending"
                    string="Pending"
                    domain="[('state', '=', 'pending')]"
                />
                <filter name="done" string="Done" domain="[('state', '=', 'done')]" />
                <filter
                    name="error"
                    string="Error"
                    domain="[('state', '=', 'error')]"
                />
                <separator />
                <filter
                    name="filter_in"
                    string="In"
                    domain="[('direction', '=', 'in')]"
                />
                <filter
                    name="filter_out"
                    string="Out"
                    domain="[('direction', '=', 'out')]"
                />
            </search>
        </field>
    </record>
    <record id="action_edi_envelope" model="ir.actions.act_window">
        <field name="name">EDI Envelopes</field>
        <field name="res_model">edi.envelope</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_edi_envelope_tree" />
    </record>
    <record id="action_edi_envelope_requeue" model="ir.actions.server">
        <field name="name">Requeue</field>
        <field name="model_id" ref="model_edi_envelope" />
        <field name="binding_model_id" ref="connector_edi.model_edi_envelope" />
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            records.action_pending()
        </field>
    </record>
</odoo>
