<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="crm_lead_view_form" model="ir.ui.view">
        <field name="name">crm_lead_view_form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="priority">75</field>
        <field name="arch" type="xml">
            <xpath
                expr="//group[@name='lead_partner']/field[@name='partner_id']"
                position="after"
            >
                <field name="brand_id" placeholder="Brand" />
            </xpath>
            <xpath
                expr="//group[@name='opportunity_partner']/field[@name='partner_id']"
                position="after"
            >
                <field name="brand_id" placeholder="Brand" />
            </xpath>
        </field>
    </record>

    <record id="crm_case_kanban_view_leads" model="ir.ui.view">
        <field name="name">crm_case_kanban_view_leads</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads" />
        <field name="priority">75</field>
        <field name="arch" type="xml">
            <xpath expr="//kanban/field[1]" position="after">
                <field name="brand_id" />
            </xpath>

            <xpath
                expr="//t[@t-name='kanban-box']//div[hasclass('o_kanban_record_subtitle')]"
                position="after"
            >
                <div>
                    <span
                        class="o_text_overflow"
                        t-if="record.brand_id.value"
                        t-esc="record.brand_id.value"
                    />
                </div>
            </xpath>

        </field>
    </record>

    <record id="quick_create_opportunity_form" model="ir.ui.view">
        <field name="name">quick_create_opportunity_form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.quick_create_opportunity_form" />
        <field name="priority">75</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="brand_id" placeholder="Brand" />
            </xpath>

        </field>
    </record>

</odoo>
