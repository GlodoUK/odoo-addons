<odoo>
    <data>
        <record id="product_template_only_form_view" model="ir.ui.view">
            <field name="name">product_template_only_form_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="priority">75</field>
            <field name="arch" type="xml">
                <button name="toggle_active" position="before">
                    <button class="oe_stat_button" name="action_orderpoint_link" type="object" icon="fa-money" attrs="{'invisible': [('purchase_ok', '=', False)]}" help="Reordering rules">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="orderpoint_count" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Reordering Rules</span>
                        </div>
                    </button>
                </button>
                <xpath expr="//page[@name='purchase']" position="inside">
                    <group string="Reordering Rules">
                        <field name="orderpoint_ids" context="{'default_product_id': product_variant_id}" nolabel="1">
                            <tree>
                                <field name="name"/>
                                <field name="product_min_qty"/>
                                <field name="product_max_qty"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product_normal_form_view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="priority">75</field>
            <field name="arch" type="xml">
                <button name="toggle_active" position="before">
                    <button class="oe_stat_button" name="action_orderpoint_link" type="object" icon="fa-money" attrs="{'invisible': [('purchase_ok', '=', False)]}" help="Reordering rules">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="orderpoint_count" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Reordering Rules</span>
                        </div>
                    </button>
                </button>
                <xpath expr="//page[@name='purchase']" position="inside">
                    <group string="Reordering Rules">
                        <field name="orderpoint_ids" context="{'default_product_id': active_id}" nolabel="1">
                            <tree>
                                <field name="name"/>
                                <field name="product_min_qty"/>
                                <field name="product_max_qty"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
