<odoo>
    <record model="ir.ui.view" id="view_edi_message_form">
        <field name="name">view_edi_backend_form</field>
        <field name="model">edi.message</field>
        <field name="inherit_id" ref="connector_edi.view_edi_message_form" />
        <field name="priority">75</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='related_docs']" position="inside">
                <group>
                    <field name="edi_product_tmpl_ids" string="Product Templates">
                        <tree>
                            <field name="odoo_id" widget="many2one" />
                            <field name="create_date" />
                            <field name="write_date" />
                        </tree>
                    </field>
                    <field name="edi_product_variant_ids" string="Product Variants">
                        <tree>
                            <field name="odoo_id" widget="many2one" />
                            <field name="create_date" />
                            <field name="write_date" />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
