<odoo>
    <record model="ir.ui.view" id="view_partner_form">
        <field name="name">view_partner_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority">75</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_view_edi_messages"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-envelope-open-o"
                    attrs="{'invisible': [('edi_message_count', '&lt;=', 0)]}"
                >
                    <field
                        name="edi_message_count"
                        widget="statinfo"
                        string="EDI Messages"
                    />
                </button>
            </xpath>
            <xpath expr="//form" position="inside">
                <field name="edi_partner_count" invisible="1" />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page
                    name="edi_partner_ids"
                    string="EDI"
                    attrs="{'invisible': [('edi_partner_count', '&lt;', '1')]}"
                >
                    <group>
                        <group name="edi_partner_ids" string="EDI Partner Bindings">
                            <field name="edi_partner_ids" nolabel="1" colspan="2">
                                <tree create="false">
                                    <field name="edi_message_id" widget="many2one" />
                                    <field name="edi_external_id" />
                                    <field name="backend_id" widget="many2one" />
                                    <field name="edi_metadata_string" />
                                </tree>
                            </field>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
